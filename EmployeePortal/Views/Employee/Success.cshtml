@model EmployeePortal.Models.Employee
@{
    ViewData["Title"] = "Сотрудник успешно создан";
}
<div class="container mt-1">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4 border rounded">
                    <div class="text-center mb-4">
                        <h2 class="text-success mb-3"><i class="bi bi-check-circle-fill"></i> Сотрудник успешно создан!</h2>
                        <p class="text-muted">
                            Добро пожаловать, <strong>@Model.FullName</strong>! Мы рады, что вы присоединились к отделу <strong>@Model.Department?.Name</strong>. Ниже приведены данные нового сотрудника:
                        </p>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <th class="text-muted text-start" style="width: 30%;">📧 Email:</th>
                                    <td class="fw-bold text-dark text-start">@Model.Email</td>
                                </tr>
                                <tr>
                                    <th class="text-muted text-start">💼 Должность:</th>
                                    <td class="fw-bold text-dark text-start">@Model.Designation?.Name</td>
                                </tr>
                                <tr>
                                    <th class="text-muted text-start">🏢 Отдел:</th>
                                    <td class="fw-bold text-dark text-start">@Model.Department?.Name</td>
                                </tr>
                                <tr>
                                    <th class="text-muted text-start">🗓️ Дата приема:</th>
                                    <td class="fw-bold text-dark text-start">@Model.HireDate.ToShortDateString()</td>
                                </tr>
                                <tr>
                                    <th class="text-muted text-start">🎂 Дата рождения:</th>
                                    <td class="fw-bold text-dark text-start">@Model.DateOfBirth.ToShortDateString()</td>
                                </tr>
                                <tr>
                                    <th class="text-muted text-start">👔 Тип сотрудника:</th>
                                    <td class="fw-bold text-dark text-start">@Model.EmployeeType?.Name</td>
                                </tr>
                                <tr>
                                    <th class="text-muted text-start">⚧ Пол:</th>
                                    <td class="fw-bold text-dark text-start">@Model.Gender</td>
                                </tr>
                                <tr>
                                    <th class="text-muted text-start">💰 Зарплата:</th>
                                    <td class="fw-bold text-dark text-start">@Model.Salary.ToString("N2") ₽</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="text-center mt-4">
                        <a class="btn btn-success btn-lg me-3" asp-action="Create">
                            <i class="bi bi-person-plus-fill"></i> Добавить еще сотрудника
                        </a>
                        <a class="btn btn-primary btn-lg" asp-action="List">
                            <i class="bi bi-arrow-left-circle-fill"></i> Назад к списку сотрудников
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>